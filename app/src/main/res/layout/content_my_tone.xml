<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_my_tone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mobiads.com.bomba.ui.MyTone"
    tools:showIn="@layout/activity_my_tone">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_btn"/>


    <LinearLayout android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/white_oval"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_16sdp"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@mipmap/record" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/white_oval"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@mipmap/attach" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layout"
        android:layout_marginTop="@dimen/_8sdp">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textColorHint="@color/colorWhite">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tone_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFF"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Tone Name:"
                android:inputType="text"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:textSize="@dimen/_12sdp" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textColorHint="@color/colorWhite">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFF"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Phone:"
                android:inputType="phone"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:textSize="@dimen/_12sdp" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:background="@drawable/create_tune_btn"
        android:layout_marginBottom="@dimen/_16sdp"
        android:text="submit"
        android:textColor="@color/colorRed"/>

</RelativeLayout>
